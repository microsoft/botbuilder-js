{
    "$schema": "../../../../botbuilder-dialogs-adaptive/tests/schema/test.schema",
    "$kind": "Microsoft.Test.Script",
    "dialog": {
        "$kind": "Microsoft.AdaptiveDialog",
        "id": "planningTest",
        "triggers": [
            {
                "$kind": "Microsoft.OnBeginDialog",
                "actions": [
                    {
                        "$kind": "Teams.SendMessagingExtensionSelectItemResponse",
                        "property": "user.result",
                        "card": {
                            "type": "message",
                            "attachments": [
                                {
                                    "contentType": "application/vnd.microsoft.card.thumbnail",
                                    "content": {
                                        "title": "card-title"
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            {
                "$kind": "Microsoft.OnError",
                "actions": [
                    {
                        "$kind": "Microsoft.SendActivity",
                        "activity": "${turn}"
                    }
                ]
            }
        ]
    },
    "script": [
        {
            "$kind": "Microsoft.Test.UserActivity",
            "activity": {
                "type": "message",
                "text": "hi",
                "name": "composeExtension/queryLink"
            }
        },
        {
            "$kind": "Microsoft.Test.AssertReplyActivity",
            "assertions": [
                "type == 'invokeResponse'",
                "conversation.id == 'Action_SendMessagingExtensionSelectItemResponse'",
                "value.body.composeExtension.type == 'result'",
                "value.body.composeExtension.attachmentLayout == 'list'",
                "value.body.composeExtension.attachments[0].contentType == 'application/vnd.microsoft.card.thumbnail'",
                "value.body.composeExtension.attachments[0].content.title == 'card-title'"
            ]
        }
    ]
}