{
    "$schema": "../../../../botbuilder-dialogs-adaptive/tests/schema/test.schema",
    "$kind": "Microsoft.Test.Script",
    "dialog": {
        "$kind": "Microsoft.AdaptiveDialog",
        "id": "planningTest",
        "triggers": [
            {
                "$kind": "Microsoft.OnBeginDialog",
                "actions": [
                    {
                        "$kind": "Teams.SendMessagingExtensionAuthResponse",
                        "connectionName": "test connection",
                        "title": "test title"
                    }
                ]
            },
            {
                "$kind": "Microsoft.OnError",
                "actions": [
                    {
                        "$kind": "Microsoft.SendActivity",
                        "activity": "${turn.dialogEvent.value.message}"
                    }
                ]
            }
        ]
    },
    "script": [
        {
            "$kind": "Microsoft.Test.UserActivity",
            "activity": {
                "type": "message",
                "text": "hi",
                "name": "composeExtension/queryLink"
            }
        },
        {
            "$kind": "Microsoft.Test.AssertReplyActivity",
            "assertions": [
                "type == 'invokeResponse'",
                "conversation.id == 'Convo1'",
                "value.body.composeExtension.type == 'auth'",
                "value.body.composeExtension.suggestedActions.actions[0].title == 'test title'",
                "value.body.composeExtension.suggestedActions.actions[0].type == 'openUrl'",
                "value.body.composeExtension.suggestedActions.actions[0].value == 'https://fake.com/oauthsignin/test%20connection/test/user1'"
            ]
        }
    ]
}